<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shashank.expensermanager">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Proposition_Activity">

        </activity>
        <activity
            android:name=".Demo_Activity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".Passcode_Activity"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity
            android:name=".SettingsActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".Add_Category"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Report_Activity"></activity>
        <activity
            android:name=".Profile_Activity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"

            android:theme="@style/AppTheme.NoActionBar">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity android:name=".activities.AddExpenseActivity" />
        <activity
            android:name=".activities.SplashScreen"
            android:theme="@style/SplashTheme"></activity>
    </application>

</manifest>